@model TechWave_Electronics.Models.Job

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Job</h1>

<h4 class="text-center text-bg-warning">Edit</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JobiD" />
            <div class="form-group">
                <label asp-for="jobName" class="control-label"></label>
                <input asp-for="jobName" class="form-control" />
                <span asp-validation-for="jobName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaseSalary" class="control-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
                <span asp-validation-for="BaseSalary" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
                <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
